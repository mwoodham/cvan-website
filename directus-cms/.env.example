# Directus Configuration
# Copy this file to .env and fill in your values

# Database (Supabase PostgreSQL)
DB_CLIENT=pg
DB_HOST=your-supabase-host.pooler.supabase.com
DB_PORT=6543
DB_DATABASE=postgres
DB_USER=postgres.your-project-ref
DB_PASSWORD=your-database-password
DB_POOL_MIN=0
DB_POOL_MAX=7

# Security Keys (generate unique random strings for production)
# Use: openssl rand -hex 32
KEY=generate-a-random-64-character-hex-string
SECRET=generate-another-random-64-character-hex-string

# Admin Account
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-admin-password
DIRECTUS_ADMIN_TOKEN=your-admin-api-token

# Server
PORT=8055
PUBLIC_URL=https://your-render-app.onrender.com

# Supabase Storage (S3-compatible)
STORAGE_LOCATIONS="supabase"
STORAGE_SUPABASE_DRIVER="s3"
STORAGE_SUPABASE_KEY=your-supabase-storage-access-key
STORAGE_SUPABASE_SECRET=your-supabase-storage-secret-key
STORAGE_SUPABASE_BUCKET="media"
STORAGE_SUPABASE_ENDPOINT="https://your-project-ref.supabase.co/storage/v1/s3"
STORAGE_SUPABASE_REGION="eu-central-1"
STORAGE_SUPABASE_FORCE_PATH_STYLE="true"
